#Create your first useful Makefile.
#compiler to be used
CC = gcc

#the .c files
SRC = main.c holberton.c

#name of executable
NAME = holberton

#the .o files
OBJ = $(SRC:.c=.o)

#Flags of compiler
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
	