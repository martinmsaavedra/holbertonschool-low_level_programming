#Create your first useful Makefile.
#compiler to be used
CC = gcc

#the .c files
SRC = main.c holberton.c

#name of executable
NAME = holberton

#the .o files
OBJ = $(SRC:.c=.o)

RM = rm -f

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: 
	$(RM) clean oclean

re:
	fclean all
	
